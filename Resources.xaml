    <system:String x:Key="validationPeople_codeIsEmpty">وارد كردن كد الزامي مي باشد</system:String>
    <system:String x:Key="validationPeople_titleIsEmpty">وارد كردن عنوان الزامي مي باشد</system:String>
    <!-- Font -->
    <Style x:Key="customFont">
        <Setter  Property="TextElement.FontFamily" Value="/Resources/Fonts/#Shabnam"></Setter>
    </Style>
    <Style x:Key="iransans">
        <Setter  Property="TextElement.FontFamily" Value="/Resources/Fonts/#IRANSans"></Setter>
    </Style>
    <Style x:Key="iransans(FaNum)">
        <Setter  Property="TextElement.FontFamily" Value="/Resources/Fonts/#IRANSansNumbers"></Setter>
    </Style>
    <!--DataGrid Styles-->
    <Style x:Key="DataGridRowStyle" TargetType="{x:Type DataGridRow}">
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ValidationErrorTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <TextBlock Foreground="Red" Margin="2,0,0,0" Text="!" VerticalAlignment="Center" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RowColor}" Value="0">
                <Setter Property="Background" Value="#FFEAEBEC"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding RowColor}" Value="1">
                <Setter Property="Background" Value="#FFF7F7F7"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DataGridCellStyle" TargetType="{x:Type DataGridCell}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Border BorderBrush="Black" BorderThickness="0.05 0.05 0 0" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"  HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                        <!-- Soheil :Set Alignment of Text Cell = HorizontalAlignment=Center -->
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>



        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Opacity" Value="0.8"></Setter>
                <Setter Property="Background"  Value="#FFA6A6A6"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
            </Trigger>
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static DataGrid.FocusBorderBrushKey}}"/>
            </Trigger>

        </Style.Triggers>
    </Style>
    <Style x:Key="placeHolder" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <TextBox HorizontalContentAlignment="Center" Text="{Binding Path=Text,
                                                RelativeSource={RelativeSource TemplatedParent}, 
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"
                                 x:Name="textSource" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 Panel.ZIndex="2" />
                        <TextBox Text="{TemplateBinding Tag}"  Background="{TemplateBinding Background}" Panel.ZIndex="1">
                            <TextBox.Style>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Foreground" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}" Value="">
                                            <Setter  Property="FontFamily" Value="IRANSansFaNum"/>
                                            <Setter  Property="Foreground" Value="#8E8E8E" />
                                            <Setter  Property="FontStyle"  Value="Italic"/>
                                            <Setter  Property="FontSize" Value="12"/>
                                            <Setter  Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter  Property="VerticalContentAlignment" Value="Center"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>


    </Style>

    <Style x:Key="AddDocTextBlock" TargetType="TextBlock" >
        <Setter Property="FontFamily" Value="IRANSans"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#106EBE"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Height" Value="25"/>
    </Style>

    <Style x:Key="AddDocTextBox" TargetType="TextBox" >
        <Setter Property="FontFamily" Value="b nazanin"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Height" Value="27"/>
    </Style>
</ResourceDictionary>